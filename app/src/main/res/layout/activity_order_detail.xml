<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common_screen.OrderDetailActivity">
    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/bg_card_bill"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Cảm ơn bạn"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorTextBlack"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Giao dịch của bạn đã thành công"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#8F000000"
            android:textAlignment="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="Mã giao dịch"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_id_order"
                android:text="Mã giao dịch"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="Thời gian"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_time"
                android:text="Mã giao dịch"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:background="@color/colorGray_100"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_product"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginTop="5dp"
            android:background="@color/colorGray_100"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Thanh toán"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextBlack"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Giá"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_price_total_without_discount"
                android:textSize="18sp"
                android:text="12342343 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Khuyến mại"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_money_discount"
                android:textSize="18sp"
                android:text="12342343 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Tong tiền"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/total_money_both_discount"
                android:textSize="18sp"
                android:text="12342343 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Phương thức thanh toán"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_payment_method"
                android:textSize="18sp"
                android:text="Credit or debit card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:background="@color/colorGray_100"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Địa chỉ giao hàng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextBlack"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ho va tên"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_name_receive"
                android:textSize="18sp"
                android:text="12342343 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Dien thoại"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_phone_receive"
                android:textSize="18sp"
                android:text="12342343 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Dia chỉ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlack"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_address"
                android:textSize="18sp"
                android:text="12342343 VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
 </ScrollView>